<Window x:Class="Project01_BatchRename.AddArgumentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Project01_BatchRename"
        mc:Ignorable="d"
        Title="AddArgumentWindow" Height="450" Width="800">
    <Canvas>
        <Label Content="Enter argument" FontSize="15" Canvas.Left="300" Canvas.Top="161" HorizontalAlignment="Center" VerticalAlignment="Top" />
        <TextBox Name="argumentTextBox" Width="200" Canvas.Left="300" Canvas.Top="205" VerticalContentAlignment="Center"/>
        <Button Name="confirmButton" Click="confirmButton_Click" Content="OK" IsDefault="True"
                Canvas.Left="320" Canvas.Top="251" HorizontalAlignment="Left" VerticalAlignment="Center" RenderTransformOrigin="1.066,0.541"/>
        <Button Name="cancelButton" Click="cancelButton_Click" Content="Cancel" IsCancel="True"
                BorderBrush="#AB2328" Background="#AB2328" Canvas.Left="412" Canvas.Top="251" HorizontalAlignment="Left" VerticalAlignment="Center"/>
    </Canvas>
</Window>
